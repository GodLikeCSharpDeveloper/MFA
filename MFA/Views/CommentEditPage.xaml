<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MFA.Views.CommentEditPage"
             xmlns:view="clr-namespace:MFA.ViewModels"
             Title="CommentEditPage"
             x:DataType="view:CommentEditViewModel">
    <Shell.TitleView>
        <Grid RowDefinitions="*" ColumnDefinitions="auto,auto,auto,*" Padding="0, 0, 0, 0">
            <ImageButton  Source="icons8confirm50.png" WidthRequest="30" HeightRequest="30" Grid.Column="3" HorizontalOptions="End" Command="{Binding ConfirmEditCommand}"></ImageButton>
        </Grid>
    </Shell.TitleView>
    <ScrollView>
        <Grid RowDefinitions="30,*">
            <Label Text="Edit your comment" Grid.Row="0"></Label>
            <Editor Grid.Row="1" Text="{Binding Comment.Content}"></Editor>
        </Grid>
    </ScrollView>
</ContentPage>