<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MFA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MFA.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        FlyoutItemIsVisible="True"
        Shell.NavBarIsVisible="False"/>
    <FlyoutItem Title="One">
        <ShellContent
            Title="One"
            ContentTemplate="{DataTemplate local:DetailsTopicPage}"
            Route="OnePage"/>
    </FlyoutItem>
    <FlyoutItem Title="Two">
        <ShellContent
            Title="Two"
            ContentTemplate="{DataTemplate local:DetailsTopicPage}"
            Route="TwoPage" />
    </FlyoutItem>
    <FlyoutItem Title="Three" >
        <ShellContent
            Title="Three"
            ContentTemplate="{DataTemplate local:DetailsTopicPage}"
            Route="ThreePage" />
    </FlyoutItem>
    <FlyoutItem Title="Four">
        <ShellContent
            Title="Four"
            ContentTemplate="{DataTemplate local:DetailsTopicPage}"
            Route="FourPage" />
    </FlyoutItem>
    <MenuItem Text="Help"
              IconImageSource="help.png"/>
   
   
</Shell>
